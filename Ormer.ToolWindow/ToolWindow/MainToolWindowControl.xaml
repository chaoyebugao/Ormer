<UserControl x:Class="Ormer.ToolWindow.ToolWindow.MainToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="Ormer_Code_Generator">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="10" HorizontalAlignment="Center">Ormer Code Generator</TextBlock>
            <StackPanel Orientation="Vertical" Margin="10,0,10,0">
                <Button x:Name="btn_gen_now" Content="生成" Margin="0,5" Click="btn_gen_now_Click"/>
                <Button x:Name="btn_setting" Content="配置" Margin="0,5" Click="btn_setting_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
